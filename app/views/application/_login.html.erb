<% if current_user %>

  <div class="">
    <div class=""><h3>Welcome <%= current_user.username %>!</h3></div>
    <div class=""></div>
    <div class=""><%= link_to "Log Out", session_path(session), method: :delete, :class => "" %></div>
  </div>

<% else %>

  <%= form_with url: session_path, local: true do |form| %>
    <div class="">
      <div class="">
        <%= form.text_field :username, :class => '', :placeholder => 'Username' %>
      </div>
      <div  class="">
        <%= form.password_field :password, :class => '', :placeholder => 'Password' %>
      </div>
      <div  class="">
        <%= form.submit "Log In", :class => ""%>
      </div>
      <div  class="">
        <%= link_to 'Sign Up', new_user_path, :class => "" %>
      </div>
    </div>
  <% end %>

<% end %>