<strong>Votes Score: <%= answer.score %></strong>
<% if current_user %>|
  <%= link_to '<i class="fas fa-sort-up text-danger"></i>'.html_safe, question_answer_votes_path(answer.question, answer, {vote: {value: 1, user_id: current_user, answer_id: answer.id}}), method: :post %> |
  <%= link_to '<i class="fas fa-sort-down text-danger"></i>'.html_safe, question_answer_votes_path(answer.question, answer, {vote: {value: -1, user_id: current_user, answer_id: answer.id}}), method: :post %>
<% end %>