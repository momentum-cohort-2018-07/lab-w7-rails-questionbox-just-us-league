<p id="notice"><%= notice %></p>

<h1>
  <%= @question.title %>
</h1>

<p>
  <%= @question.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user.username %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %> |
<%= link_to 'Destroy', question_path(@question), method: :delete, data: { confirm: 'Are you sure?' } %>

<h2>Answers</h2>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question.answers.each do |answer| %>
      <tr>
        <td><%= answer.body %></td>
        <td><%= answer.user %></td>
        <td><%= answer.question %></td>
        <td><%= link_to 'Show', @question %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', question_answer_path(@question, answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_with url: question_answers_path(@question), local: true do |form| %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :question_id %>
    <%= form.text_field :question_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
